@using UIDemos.Helpers
@model UIDemos.Models.Contact

@using (Html.BeginRow()) {
	Html.FluentTextEditBlockFor(m => m.FirstName, "col-md-2")
		.FluentTextEditBlockFor(m => m.LastName, "col-md-2")
		.FluentTextEditBlockFor(m => m.Birthday, "col-md-2");
}

@using (Html.BeginRow())
{
	@Html.TextEditBlockFor(m => m.Address1, "col-md-4")
}

@using (Html.BeginRow())
{
	@Html.TextEditBlockFor(m => m.City, "col-md-2")
	@Html.DropDownBlockFor(m => m.State, Model.States, "col-md-2")
    @Html.TextEditBlockFor(m => m.ZipCode, "col-md-2")
}

@using (Html.BeginRow())
{
	@Html.TextEditBlockFor(m => m.Email, "col-md-4")
}

