@using UIDemos.Models

@model ShoppingCart

<li class="dropdown">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-shopping-cart"></span><span class="caret"></span></a>
	<div class="dropdown-menu shopping-cart">
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Name</th>
					<th>Price</th>
					<th>Quantity</th>
					<th></th>
				</tr>
			</thead>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td style="width:50%">@item.Product.Name</td>
					<td style="width:20%">@item.Product.Price.ToString("C")</td>
					<td style="width:10%">@item.Quantity</td>
					<td style="width:20%"><a class="btn btn-xs btn-default" href="#">Remove</a></td>
				</tr>
			}
		</table>
		<a class="btn btn-success" href="#">Checkout</a>
	</div>
</li>

