@model DateTime?

@{
	var name = ViewData.ModelMetadata.PropertyName;
	var value = ViewData.Model.HasValue ? ViewData.Model.Value.ToString("d") : string.Empty;

	var rules = Html.GetClientValidationRules(ViewData.ModelMetadata, null);
	var atts = UnobtrusiveValidationAttributesGenerator.GetValidationAttributes(rules);
}

<input id="@Html.Id(name)" name="@name" data-val-datepicker value="@value" class="form-control" />