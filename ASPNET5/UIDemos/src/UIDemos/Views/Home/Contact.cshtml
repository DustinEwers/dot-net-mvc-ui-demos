@using UIDemos.Models;
@using UIDemos.Helpers;

@model ContactViewModel

@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) {
	using (Html.BeginRow()) {
		Html.TextEditBlockFor(m => m.FirstName, "col-md-2")
			.TextEditBlockFor(m => m.LastName, "col-md-2");
	}

	using (Html.BeginRow())
	{
		Html.TextEditBlockFor(m => m.Address1, "col-md-4");
	}

	using (Html.BeginRow())
	{
		Html.TextEditBlockFor(m => m.City, "col-md-2")
			.DropDownBlockFor(m => m.State, Model.States, "col-md-2")
			.TextEditBlockFor(m => m.ZipCode, "col-md-2");
	}

	using (Html.BeginRow())
	{
		<div class="col-md-12">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	}
}


@using (Html.BeginRow("row-top-spacer"))
{
	<div class="col-md-12">
		<address>
			123 Wisconsin Way<br />
			Madison, WI 53704<br />
			<abbr title="Phone">P:</abbr>
			608-123-1111
		</address>
		<address>
			<strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
			<strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
		</address>
	</div>
}


